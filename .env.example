# Supabase (server-side)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-role-key
# Or if you use a different naming convention:
SUPABASE_SECRET_KEY=your-service-role-key

# Supabase (client-side, if needed)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_PUBLISHABLE_OR_ANON_KEY=your-anon-key

# OpenAI
OPENAI_API_KEY=your-openai-api-key
OPENAI_TIMEOUT_SEC=30
OPENAI_MAX_RETRIES=3

# Google Gemini (for category verification - optional)
# GEMINI_API_KEY=your-gemini-api-key

# Email (Gmail SMTP)
GMAIL_USER=you@example.com
GMAIL_APP_PASSWORD=your-app-password
GMAIL_FROM_EMAIL=you@example.com
SMTP_TIMEOUT_SEC=30

# pgvector Configuration
# Set to "true" to use database-native vector search (requires migration)
# Set to "false" to use in-memory NumPy search
USE_PGVECTOR=true
PGVECTOR_TABLE=event_embeddings_v2

# Logging Configuration
LOG_LEVEL=INFO
# LOG_FILE=/path/to/connect3.log  # Optional: log to file

# App URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000
